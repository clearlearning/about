                <!-- Navigation -->
                <div class="navigation">
                    <button class="btn" id="prev-btn" onclick="previousSlide()">‚Üê Previous</button>
                    <div>
                        <span id="slide-counter">Slide 1 of 6</span>
                    </div>
                    <button class="btn btn-primary" id="next-btn" onclick="nextSlide()">Next ‚Üí</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentSlide = 0;
        const totalSlides = 6;
        let assessmentAnswers = {
            q1: null,
            q2: null,
            q3: null
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateSlide();
        });

        function updateSlide() {
            document.querySelectorAll('.slide').forEach(slide => {
                slide.classList.remove('active');
            });
            
            const slides = document.querySelectorAll('.slide');
            if (slides[currentSlide]) {
                slides[currentSlide].classList.add('active');
            }
            
            document.querySelectorAll('.sidebar-item').forEach((item, index) => {
                item.classList.remove('active');
                if (index === currentSlide) {
                    item.classList.add('active');
                }
                if (index < currentSlide) {
                    item.classList.add('completed');
                }
            });
            
            const progress = ((currentSlide + 1) / totalSlides) * 100;
            document.getElementById('progress-bar').style.width = progress + '%';
            document.getElementById('progress-percent').textContent = Math.round(progress);
            
            document.getElementById('slide-counter').textContent = `Slide ${currentSlide + 1} of ${totalSlides}`;
            
            document.getElementById('prev-btn').disabled = currentSlide === 0;
            if (currentSlide === totalSlides - 1) {
                document.getElementById('next-btn').style.display = 'none';
            } else {
                document.getElementById('next-btn').style.display = 'block';
            }
        }

        function nextSlide() {
            if (currentSlide < totalSlides - 1) {
                currentSlide++;
                updateSlide();
                document.querySelector('.main-content').scrollTop = 0;
            }
        }

        function previousSlide() {
            if (currentSlide > 0) {
                currentSlide--;
                updateSlide();
                document.querySelector('.main-content').scrollTop = 0;
            }
        }

        document.querySelectorAll('.sidebar-item').forEach(item => {
            item.addEventListener('click', function() {
                const slideNum = parseInt(this.getAttribute('data-slide'));
                currentSlide = slideNum;
                updateSlide();
                document.querySelector('.main-content').scrollTop = 0;
            });
        });

        // Gallery cards reveal
        function revealGallery(slideNum, cardNum) {
            const slideId = slideNum === 1 ? 1 : 2; // Planning (1) or Sources (2)
            const slides = document.querySelectorAll('.slide');
            const cards = slides[slideId].querySelectorAll('.gallery-card');
            cards[cardNum - 1].classList.toggle('revealed');
        }

        // Accordion functionality
        function toggleAccordion(num) {
            const content = document.getElementById('content-' + num);
            const arrow = document.getElementById('arrow-' + num);
            const header = arrow.parentElement;
            
            if (content.classList.contains('expanded')) {
                content.classList.remove('expanded');
                arrow.classList.remove('rotated');
                header.classList.remove('active');
            } else {
                content.classList.add('expanded');
                arrow.classList.add('rotated');
                header.classList.add('active');
            }
        }

        // Quiz option selection
        function selectOption(questionId, value) {
            const options = document.querySelectorAll(`input[name="${questionId}"]`);
            options.forEach(opt => {
                opt.parentElement.classList.remove('selected');
            });
            
            const selectedInput = document.querySelector(`input[name="${questionId}"][value="${value}"]`);
            if (selectedInput) {
                selectedInput.checked = true;
                selectedInput.parentElement.classList.add('selected');
            }
        }

        // Question 1: Matching
        function checkQuestion1() {
            const match1 = document.getElementById('match1').value;
            const match2 = document.getElementById('match2').value;
            const match3 = document.getElementById('match3').value;
            
            if (!match1 || !match2 || !match3) {
                alert('Please complete all matches before checking your answer.');
                return;
            }
            
            const correct = (match1 === 'foundation' && match2 === 'primary' && match3 === 'subject');
            assessmentAnswers.q1 = correct;
            
            const feedback = document.getElementById('feedback-q1');
            feedback.classList.add('show');
            
            if (correct) {
                feedback.className = 'quiz-feedback show correct';
                feedback.innerHTML = `<h4 style="color: #28a745;">‚úì Correct!</h4>
                <p><strong>Why this is right:</strong> You correctly identified the role each individual plays in an investigation:</p>
                <ul>
                    <li><strong>Complainant</strong> provides the foundation‚Äîthe initial allegation that triggers the investigation</li>
                    <li><strong>Investigator</strong> is the best source of information because they have access to institutional knowledge, previous cases, and investigation files</li>
                    <li><strong>Respondent</strong> is the subject of the investigation‚Äîthe person or entity against whom the complaint was made</li>
                </ul>
                <h4 style="margin-top: 15px;">Key Insight</h4>
                <p>Understanding these roles helps you identify where to gather different types of information throughout your investigation.</p>`;
            } else {
                feedback.className = 'quiz-feedback show incorrect';
                feedback.innerHTML = `<h4 style="color: #dc3545;">Not quite.</h4>
                <h4>Review the Roles</h4>
                <p>Think about what each individual contributes to an investigation:</p>
                <ul>
                    <li>Who initiates the investigation by filing the complaint?</li>
                    <li>Who has access to previous investigations, institutional knowledge, and case files?</li>
                    <li>Who is being investigated?</li>
                </ul>
                <p><strong>Review the Seven Sources of Information section to see the correct answers.</strong></p>`;
            }
        }

        // Question 2: True/False
        function checkQuestion2() {
            const selected = document.querySelector('input[name="q2"]:checked');
            
            if (!selected) {
                alert('Please select an answer before checking.');
                return;
            }
            
            const correct = (selected.value === 'false');
            assessmentAnswers.q2 = correct;
            
            // Mark options
            document.querySelectorAll('input[name="q2"]').forEach(opt => {
                opt.parentElement.classList.remove('correct', 'incorrect');
                if (opt.value === 'false') {
                    opt.parentElement.classList.add('correct');
                } else if (opt.checked) {
                    opt.parentElement.classList.add('incorrect');
                }
            });
            
            const feedback = document.getElementById('feedback-q2');
            feedback.classList.add('show');
            
            if (correct) {
                feedback.className = 'quiz-feedback show correct';
                feedback.innerHTML = `<h4 style="color: #28a745;">‚úì Correct!</h4>
                <p><strong>Why this is right:</strong> The statement is FALSE. Legal protections against unreasonable searches typically apply to ALL levels of government within a jurisdiction.</p>
                <h4 style="margin-top: 15px;">The principle:</h4>
                <p>In most jurisdictions, constitutional or statutory protections that restrict federal or national government actions also restrict sub-national government actions (states, provinces, territories, municipalities). For example, in the United States, the 14th Amendment applies federal protections to state and local governments. In Canada, the Charter of Rights and Freedoms applies to all levels of government.</p>
                <h4 style="margin-top: 15px;">Key Insight</h4>
                <p>Sub-national governments typically cannot have fewer protections than the national government, though they may have more. All government agencies at every level must generally respect the same fundamental legal protections.</p>`;
            } else {
                feedback.className = 'quiz-feedback show incorrect';
                feedback.innerHTML = `<h4 style="color: #dc3545;">Review the legal framework:</h4>
                <p>Think about whether state, provincial, or local government agencies have fewer restrictions than national agencies when conducting searches and investigations.</p>
                <ul>
                    <li>Do legal protections apply only to the national government?</li>
                    <li>Can sub-national agencies ignore legal protections that apply to national agencies?</li>
                    <li>Do investigators at all levels need proper authorization when demanded?</li>
                </ul>
                <p><strong>Review the Legal Considerations section to understand how protections apply across government levels.</strong></p>`;
            }
        }

        // Question 3: Multiple Choice
        function checkQuestion3() {
            const selected = document.querySelector('input[name="q3"]:checked');
            
            if (!selected) {
                alert('Please select an answer before checking.');
                return;
            }
            
            const correct = (selected.value === 'none');
            assessmentAnswers.q3 = correct;
            
            // Mark options
            document.querySelectorAll('input[name="q3"]').forEach(opt => {
                opt.parentElement.classList.remove('correct', 'incorrect');
                if (opt.value === 'none') {
                    opt.parentElement.classList.add('correct');
                } else if (opt.checked) {
                    opt.parentElement.classList.add('incorrect');
                }
            });
            
            const feedback = document.getElementById('feedback-q3');
            feedback.classList.add('show');
            
            if (correct) {
                feedback.className = 'quiz-feedback show correct';
                feedback.innerHTML = `<h4 style="color: #28a745;">‚úì Correct!</h4>
                <p><strong>Why this is right:</strong> All of the listed options ARE valid sources of information during an investigation.</p>
                <h4 style="margin-top: 15px;">Sources of information include:</h4>
                <ul>
                    <li><strong>Public Records</strong> - Court records, licenses, property records (covered in the seven sources)</li>
                    <li><strong>Witnesses</strong> - Third-party accounts of events (covered in the seven sources)</li>
                    <li><strong>Internet Search Engines</strong> - Can locate public information, news articles, social media (a tool for accessing public records and information)</li>
                    <li><strong>Court Records</strong> - Part of public records (covered in the seven sources)</li>
                    <li><strong>The Complainant</strong> - Foundation of the investigation (covered in the seven sources)</li>
                </ul>
                <h4 style="margin-top: 15px;">Key Insight</h4>
                <p>Thorough investigations draw from multiple sources. While we focused on seven primary sources, investigators use all available tools, including internet searches, to gather comprehensive information.</p>`;
            } else {
                feedback.className = 'quiz-feedback show incorrect';
                feedback.innerHTML = `<h4 style="color: #dc3545;">Review the Question Carefully</h4>
                <p>The question asks which is NOT a source of information. Think about whether ALL of the listed options can provide useful information during an investigation.</p>
                <ul>
                    <li>Can public records provide investigation information? Yes - covered in the seven sources</li>
                    <li>Can witnesses provide information? Yes - covered in the seven sources</li>
                    <li>Can internet searches help find information? Yes - they access public information</li>
                    <li>Can court records provide information? Yes - they're public records</li>
                    <li>Can complainants provide information? Yes - they're the foundation of investigations</li>
                </ul>
                <p><strong>Review the Seven Sources of Information to confirm all options are valid sources.</strong></p>`;
            }
        }
    </script>
</body>
</html>
